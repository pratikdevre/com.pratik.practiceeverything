<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                                   xmlns:app = "http://schemas.android.com/apk/res-auto"
                                                   android:layout_width = "match_parent"
                                                   android:layout_height = "match_parent"
                                                   android:padding = "10dp">
    <EditText
        android:id = "@+id/updatename"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:hint = "Enter new name"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />
    <EditText
        android:id = "@+id/updateclass"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "20dp"
        android:hint = "Enter new class name"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintHorizontal_bias = "0.0"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/updatename" />
    <Button
        android:id = "@+id/updatedata"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "Updata data"
        android:textStyle = "bold"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintHorizontal_bias = "0.842"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/updateclass" />

    <Button
        android:id = "@+id/deletedata"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "Delete data"
        android:textStyle = "bold"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintHorizontal_bias = "0.526"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/updatedata" />
</androidx.constraintlayout.widget.ConstraintLayout>